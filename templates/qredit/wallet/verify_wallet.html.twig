{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - {{ module_title }}{% endblock %}

{% block body %}

<div class="container">

<div class="col-md-12">

<h2>
{% if module_title is defined %}
{{ module_title }}
{% endif %}
</h2>

{% if form is defined %}

{{ form_start(form, { 'attr': {'autocomplete': 'off'} }) }}
{{ form_widget(form) }}
{{ form_end(form) }}

{% else %}


{% if status %}
<p class="text-success">Successfully created your wallet! :D</p>
{% else %}
<p class="text-danger">You only had ONE job.</p>
{% endif %}

{% endif %}
		


</div>
</div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
function toggleShowPass(){
	var check = $("#check").prop("checked");
	var input = $("#input");
	
	if(check === true){
		input.prop("type", "text");
	} else {
		input.prop("type", "password");
	}
}
</script>
{% endblock %}
